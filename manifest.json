{
    "manifest_version": 3,
    "name": "Lingo Launcher",
    "version": "1.0",
    "description": "Translate web pages",
    "permissions": ["scripting", "activeTab","bookmarks", "contextMenus"],
    "host_permissions": ["https://*"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "all_frames": true
      }
    ]
    
}
  
  